# Example Terraform Variables File
# AI Agent Governance Framework v2.0
#
# Copy this file to terraform.tfvars and fill in actual values
# cp terraform.tfvars.example terraform.tfvars
#
# IMPORTANT: Never commit terraform.tfvars to version control!
# Add to .gitignore to protect sensitive values

# ============================================================================
# Required Variables (MUST BE SET)
# ============================================================================

# Agent name (lowercase alphanumeric with hyphens, 3-30 characters)
agent_name = "security-agent"

# LLM API key (get from provider)
# Anthropic: https://console.anthropic.com/settings/keys
# OpenAI: https://platform.openai.com/api-keys
llm_api_key = "sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# GitHub personal access token for CI/CD integration
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow
github_token = "ghp_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# ============================================================================
# Agent Configuration
# ============================================================================

# Agent tier (tier1-observer, tier2-developer, tier3-operations, tier4-architect)
agent_tier = "tier3-operations"

# LLM provider (anthropic, openai, bedrock)
llm_model_provider = "anthropic"

# LLM model version (pinned per MI-010)
llm_model_version = "claude-sonnet-4-5-20250929"

# ============================================================================
# AWS Configuration
# ============================================================================

# AWS region
aws_region = "us-east-1"

# Environment (dev, staging, production)
environment = "dev"

# Email for cost and operational alerts
alert_email = "team@example.com"

# ============================================================================
# Cost Controls (MI-009, MI-021)
# ============================================================================

# Daily cost budget in USD
daily_cost_budget = 100.0

# Monthly cost budget in USD
monthly_cost_budget = 2000.0

# ============================================================================
# Security Controls
# ============================================================================

enable_pii_redaction = true
enable_secrets_scanning = true
enable_prompt_injection_detection = true

# ============================================================================
# Governance Controls
# ============================================================================

# Human review percentage (MI-007)
human_review_percentage = 0.25

# Applicable compliance regulations
compliance_regulations = ["GDPR", "SOX", "HIPAA"]

# Required risk control mitigations
risk_controls_required = [
  "MI-001",
  "MI-002",
  "MI-003",
  "MI-004",
  "MI-007",
  "MI-009",
  "MI-019",
  "MI-020",
  "MI-021"
]

# ============================================================================
# Tagging
# ============================================================================

tags = {
  Team       = "Platform-Engineering"
  CostCenter = "AI-Operations"
  Owner      = "platform-team@example.com"
}
