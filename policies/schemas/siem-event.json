{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SIEM Event Record",
  "type": "object",
  "required": ["siem_event_id", "timestamp", "source", "payload"],
  "properties": {
    "siem_event_id": {
      "type": "string",
      "description": "Unique identifier, should match audit_id for correlation."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of the event."
    },
    "source": {
      "type": "string",
      "enum": ["audit-trail", "secrets-manager", "jira", "infra", "other"],
      "description": "Origin of the event."
    },
    "payload": {
      "type": "object",
      "description": "Event-specific details (mirrors audit-trail inputs/outputs)."
    },
    "compliance_result": {
      "type": "string",
      "enum": ["pass", "fail", "warning"],
      "description": "Optional compliance evaluation result."
    }
  }
}
